%h2 Please Login

= form_tag sessions_path do

  %p
    = label_tag :user_identifier, "Username or Email"
    = text_field_tag :user_identifier, params[:user_identifier], class: "span3"
  %p
    = label_tag :password
    = password_field_tag :password, "", class: "span3"

  %p.button= submit_tag "Log in", class: "btn"