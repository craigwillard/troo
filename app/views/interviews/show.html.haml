%p#notice= notice

%p
  %b Interviewee:
  = @interview.interviewee.name
%p
  %b Interviewer:
  = @interview.interviewer.name
%p
  %b Approve:
  = @interview.approve
%p
  %b Date:
  = @interview.date.strftime("%e %b %Y")
%p
  %b Notes:
  = @interview.notes

-if @interviewee
  = link_to 'Edit', edit_user_interview_path(@interviewee, @interview)
  \|
  = link_to 'Back', user_interviews_path(@interviewee)
-else
  = link_to 'Edit', edit_interview_path(@interview)
  \|
  = link_to 'Back', interviews_path